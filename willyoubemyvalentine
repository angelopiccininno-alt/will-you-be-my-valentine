<script>
let canvas = document.getElementById("game");
let ctx = canvas.getContext("2d");
let box = 15;
let snake, direction, yesItem, noItem;
let score = 0;
let gameInterval;

function startGame() {
    document.getElementById("startScreen").style.display = "none";
    document.getElementById("gameContainer").style.display = "block";
    snake = [{x:150,y:150}];
    direction = "RIGHT";
    score = 0;
    document.getElementById("score").innerText = score;
    spawnItems();
    gameInterval = setInterval(draw, 120);
}

function spawnItems() {
    yesItem = {
        x: Math.floor(Math.random()*20)*box,
        y: Math.floor(Math.random()*20)*box
    };
    noItem = {
        x: Math.floor(Math.random()*20)*box,
        y: Math.floor(Math.random()*20)*box
    };
}

let startX, startY;
canvas.addEventListener("touchstart", e => {
    startX = e.touches[0].clientX;
    startY = e.touches[0].clientY;
});

canvas.addEventListener("touchmove", e => {
    let dx = e.touches[0].clientX - startX;
    let dy = e.touches[0].clientY - startY;
    if (Math.abs(dx) > Math.abs(dy)) {
        direction = dx > 0 ? "RIGHT" : "LEFT";
    } else {
        direction = dy > 0 ? "DOWN" : "UP";
    }
});

function draw() {
    ctx.clearRect(0,0,300,300);

    snake.forEach((part,i)=>{
        ctx.fillStyle = "#ff4d88";
        ctx.fillRect(part.x, part.y, box, box);
    });

    ctx.fillStyle = "white";
    ctx.fillRect(yesItem.x, yesItem.y, box, box);
    ctx.fillStyle = "black";
    ctx.fillText("YES", yesItem.x-5, yesItem.y+12);

    ctx.fillStyle = "#ff9999";
    ctx.fillRect(noItem.x, noItem.y, box, box);
    ctx.fillStyle = "black";
    ctx.fillText("NO", noItem.x, noItem.y+12);

    let head = {...snake[0]};
    if(direction==="RIGHT") head.x+=box;
    if(direction==="LEFT") head.x-=box;
    if(direction==="UP") head.y-=box;
    if(direction==="DOWN") head.y+=box;

    if(head.x===yesItem.x && head.y===yesItem.y){
        score++;
        document.getElementById("score").innerText = score;
        if(score===3){
            clearInterval(gameInterval);
            winGame();
        }
        spawnItems();
    } else {
        snake.pop();
    }

    if(head.x===noItem.x && head.y===noItem.y){
        document.getElementById("message").innerText = 
        "That was not the correct life decision.";
        setTimeout(()=>{document.getElementById("message").innerText="";},2000);
    }

    snake.unshift(head);
}

function winGame(){
    launchConfetti();
    setTimeout(()=>{
        document.getElementById("gameContainer").style.display="none";
        document.getElementById("winScreen").style.display="block";
    },1500);
}

function launchConfetti(){
    for(let i=0;i<50;i++){
        let conf = document.createElement("div");
        conf.style.position="fixed";
        conf.style.width="6px";
        conf.style.height="6px";
        conf.style.backgroundColor=
        ["#ff4d88","#ff99cc","#ffd9ec","#ff6699"][Math.floor(Math.random()*4)];
        conf.style.left=Math.random()*100+"%";
        conf.style.top="-10px";
        conf.style.opacity="0.8";
        conf.style.transition="top 2s linear";
        document.body.appendChild(conf);
        setTimeout(()=>{conf.style.top="100%";},10);
        setTimeout(()=>{conf.remove();},2000);
    }
}

function selectRecipe(btn){
    document.querySelectorAll(".recipe").forEach(b=>b.style.background="white");
    btn.style.background="#ffb3d9";
    document.getElementById("confirmDiv").innerHTML=
    '<button onclick="confirmDate()">Confirm Our Date ğŸ’•</button>';
}

function confirmDate(){
    document.getElementById("confirmDiv").innerHTML=
    "<h2>Itâ€™s a date, Valentine. ğŸ’•<br>Chef Angelo will see you on FaceTime â¤ï¸</h2>";
}
</script>

